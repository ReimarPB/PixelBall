	build/levels/level.obj          \
	build/levels/test_level.obj

all: pixelball.exe

{.}.c{build}.obj:
	mkdir $(*D) & echo.
	$(CC) $(CDEBUG) $(CFLAGS) $(CVARS) /nologo /Fo:$@ /c $** 

pixelball.exe: $(OBJS)
	link $(LDEBUG) $(CONFLAGS) /out:pixelball.exe $(OBJS) $(CONLIBS)
	rc resources.rc

$(OBJS):

